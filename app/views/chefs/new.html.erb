<h1 style="font-weight: 200;">Create Chef:</h1>

<div style="max-width: 400px;">

<%=form_for(@chef) do |f|%>

  <%= f.label :name %><%= f.text_field :name %>
  <%= f.label :image %><%= f.text_field :image %>
  <%= f.label :bio %><%= f.text_field :bio %>
  <%= f.label :experience %><%= f.text_field :experience %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, { prompt: "Choose a Restaurant" }, class: "browser-default" %>

<%= f.submit %>
<% end %>

</div>
