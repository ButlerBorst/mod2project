<div class="waves-effect waves-light btn"><a href="/restaurants/new" style="color: white">Create Restaurant</a></div>
<% @restaurants.each do |restaurant| %>
    <div class="row">
     <div class="col s4">
       <div class="card">
         <div class="card-image">
           <img src="<%= restaurant.image %>" height="300" width="350">
           <span class="card-title"><%= restaurant.name %></span>
         </div>
         <div class="card-content">
           <p class="truncate"><%= restaurant.kind %></p>
         </div>
         <div class="card-action">
           <a href="<%=restaurant_path(restaurant)%>">Visit Restaurant</a>
           <div style="color:red; float: right;">&#10084; <%= restaurant.favorite_restaurants.count %></div>
         </div>
       </div>
     </div>
  <% end %>
  </div>
