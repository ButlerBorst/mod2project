<html>

    <head>
      <title>Foodie</title>
      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag  'application', 'data-turbolinks-track': 'reload' %>
      <link href="https://fonts.googleapis.com/icon?family=Material\Icons" rel="stylesheet">


    </head>

    <body>

      <div class="container">
        <%=image_tag("Logo.png", alt: "Logo")%>

        <% if current_user %>
          <div style="float: right; padding-top: 40px;"> <%= link_to "Log Out", logout_path, method: 'DELETE'%> | <%= link_to "Your Account", user_path(current_user) %></div>
        <% else %>
          <div style="float: right; padding-top: 40px;"> <%= link_to "Login", login_path%> | <%= link_to "Sign Up", new_user_path%>  </div>
        <% end %>

        <nav>
         <div class="nav-wrapper">
           <a style="margin-left:10px" href="#!" class="brand-logo"><%= controller.controller_name.titlecase %></a>
           <ul class="right hide-on-med-and-down">
             <li><a href="/dishes"><i class="material-icons left">view_module</i>Dishes</a></li>
             <li><a href="/chefs"><i class="material-icons left">view_module</i>Chef</a></li>
             <li><a href="/restaurants"><i class="material-icons left">view_module</i>Restaurant</a></li>
           </ul>
         </div>
       </nav>
       <br>
       

      <main>
      <%= yield %>
      </main>
  </body>
</html>
